extends ../layout

block content
    .row
        form.ui.form.column(method='post', action='/admin/delete_course/' + course._id)
            h4.ui.dividing.header Are you sure you want to delete this course?
            h2= course.code + ': ' + course.name
            if (courses && courses.length)
                h4 #{course.code} is a prerequisite for the following courses:
                ul.list
                each course_ in courses
                    li #{course_.code}: #{course_.name}
                .ui.message You will be unable to delete a course that is a prerequisite for other courses.

            button.ui.button.green(type='submit') Delete Course
            a.ui.button.red(href='/admin/roadmap_dashboard') Back